{
  "name": "littletemplatemaker",
  "displayName": "Little Template Maker",
  "version": "0.8.0",
  "description": "Add templates to your workspace and let the little template maker do the rest.",
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "javascript",
    "templates",
    "template",
    "template maker",
    "handlebars",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/simpel/little-template-maker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simpel/little-template-maker"
  },
  "license": "CC-BY-SA-4.0",
  "publisher": "se-joelsanden",
  "main": "./dist/extension.js",
  "scripts": {
    "compile": "webpack",
    "compile-tests": "tsc -p . --outDir out",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "vscode:prepublish": "yarn run package",
    "watch": "webpack --watch",
    "watch-tests": "tsc -p . -w --outDir out",
    "commit": "cz",
    "deploy": "yarn run package && vsce publish --yarn",
    "lint": "xo --fix",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "contributes": {
    "commands": [
      {
        "command": "littletemplatemaker.useTemplate",
        "title": "Use Template",
        "category": "Little Template Maker"
      }
    ]
  },
  "activationEvents": [
    "onCommand:littletemplatemaker.useTemplate"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@hediet/node-reload": "^0.7.3",
    "@hediet/std": "^0.6.0",
    "@types/fs-extra": "^9.0.13",
    "change-case": "^4.1.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.1.0",
    "handlebars": "^4.7.7",
    "husky": "^8.0.2",
    "standard-version": "^9.5.0",
    "vsce": "^2.15.0",
    "xo": "latest"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#8D0377",
    "theme": "dark"
  }
}