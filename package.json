{
  "name": "littletemplatemaker",
  "displayName": "Little Template Maker",
  "version": "0.3.0",
  "description": "Add templates to your workspace and let the little template maker do the rest.",
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "javascript",
    "templates",
    "template",
    "template maker",
    "handlebars",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/simpel/little-template-maker/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simpel/little-template-maker"
  },
  "license": "CC-BY-SA-4.0",
  "publisher": "se-joelsanden",
  "main": "./out/extension.js",
  "scripts": {
    "commit": "cz",
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "deploy": "yarn run package && vsce publish --yarn",
    "lint": "xo --fix",
    "package": "tsc --outDir ./out",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "contributes": {
    "commands": [
      {
        "command": "littletemplatemaker.useTemplate",
        "title": "Use Template",
        "category": "Little Template Maker"
      }
    ]
  },
  "activationEvents": [
    "onCommand:littletemplatemaker.useTemplate"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@hediet/node-reload": "^0.7.3",
    "@hediet/std": "^0.6.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/node": "^18.11.9",
    "@types/vscode": "^1.73.0",
    "@vscode/test-electron": "^2.2.0",
    "change-case": "^4.1.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "handlebars": "^4.7.7",
    "husky": "^8.0.2",
    "mocha": "^10.1.0",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "vsce": "^2.15.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "xo": "latest"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#8D0377",
    "theme": "dark"
  }
}
